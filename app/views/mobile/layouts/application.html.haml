/[if IEMobile 7]><html class="no-js iem7"><![endif]
/[if (gt IEMobile 7)|!(IEMobile)]><!-->
%html.no-js
  /<![endif]

  = head
  %body
    .wrapper#skrollr-body
      %header{:role => "banner"}
        .container
          = render :partial => 'shared/logo'
          = render :partial => 'shared/navigation_icon'
          %a{:href => 'tel:561-320-1117', :title => 'Main Number', :class => 'phone'} 561-320-1117
      #main{:role => "main"}
        - flash.each do |name, msg|
          = content_tag :div, msg, id: "flash_#{name}"
        = yield
      %footer#ft.vcard{:role => "contentinfo"}
        .container
          = render :partial => 'shared/footer'
    = scripts
