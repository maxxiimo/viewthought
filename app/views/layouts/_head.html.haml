%head
  %meta{:charset => "utf-8"}
  %link{:rel => "dns-prefetch", :href => "//ajax.googleapis.com"}
  %link{:rel => "dns-prefetch", :href => "//maps.googleapis.com"}
  %link{:rel => "dns-prefetch", :href => "//use.typekit.net"}
  %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %title= content_for?(:title) ? ("ViewThought - " + yield(:title)) : "ViewThought"
  %meta{:name => "description", :content => "Builders of Mobile and Desktop Web Solutions"}
  %meta{:name => "viewport", :content => "width=device-width"}

  %link{:rel => "shortcut icon", :href => "/favicon.ico"}
  %link{:rel => "apple-touch-icon", :href => "/apple-touch-icon.png"}

  = stylesheet_link_tag "application"
  -# for production customize modernizr at: http://www.modernizr.com/download/
  = javascript_include_tag 'modernizr.custom.79790'

  %script{:src => "//use.typekit.net/lhf6dru.js", :type => "text/javascript"}
  :javascript
    try{Typekit.load();}catch(e){}

  = csrf_meta_tag
