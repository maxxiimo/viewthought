  = head
  %body
    .wrapper#skrollr-body
      = chromeframe
      %header{:role => 'banner'}
        .container
          = render :partial => 'shared/logo'
          = yield :navigation_text
          = render :partial => 'shared/navigation_icon'
      #main{:role => 'main'}
        = yield
      %footer.vcard{:role => "contentinfo"}
        .container
          = render :partial => 'shared/footer'
    = scripts
